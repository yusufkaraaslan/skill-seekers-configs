{
  "name": "tailwind",
  "description": "Tailwind CSS utility-first framework for rapid UI development. Use for Tailwind utilities, responsive design, custom configurations, and modern CSS workflows.",
  "base_url": "https://tailwindcss.com/docs",
  "start_urls": [
    "https://tailwindcss.com/docs/installation",
    "https://tailwindcss.com/docs/utility-first",
    "https://tailwindcss.com/docs/responsive-design",
    "https://tailwindcss.com/docs/hover-focus-and-other-states"
  ],
  "selectors": {
    "main_content": "div.prose",
    "title": "h1",
    "code_blocks": "pre code"
  },
  "url_patterns": {
    "include": ["/docs"],
    "exclude": ["/blog", "/resources"]
  },
  "categories": {
    "getting_started": ["installation", "editor-setup", "intellisense", "quick"],
    "core_concepts": ["utility-first", "responsive", "hover-focus", "dark-mode", "state"],
    "layout": ["container", "columns", "flex", "grid", "spacing", "position"],
    "typography": ["font-family", "font-size", "text-align", "text-color", "line-height"],
    "backgrounds": ["background-color", "background-image", "gradient"],
    "borders": ["border", "border-radius", "border-color", "divide", "ring"],
    "effects": ["shadow", "opacity", "transition", "animation"],
    "filters": ["blur", "brightness", "contrast", "grayscale", "saturate"],
    "customization": ["configuration", "theme", "plugins", "config"]
  },
  "rate_limit": 0.5,
  "max_pages": 200
}
