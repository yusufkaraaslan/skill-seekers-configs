{
  "name": "kubernetes",
  "description": "Complete Kubernetes orchestration knowledge combining official documentation and Kubernetes codebase. Use when deploying, managing, or debugging Kubernetes clusters.",
  "merge_mode": "rule-based",
  "sources": [
    {
      "type": "documentation",
      "base_url": "https://kubernetes.io/docs/",
      "extract_api": true,
      "start_urls": [
        "https://kubernetes.io/docs/concepts/",
        "https://kubernetes.io/docs/tasks/",
        "https://kubernetes.io/docs/reference/kubectl/"
      ],
      "selectors": {
        "main_content": "article",
        "title": "h1",
        "code_blocks": "pre code"
      },
      "url_patterns": {
        "include": ["/docs/concepts/", "/docs/tasks/", "/docs/reference/"],
        "exclude": ["/docs/setup/", "/blog/", "/case-studies/"]
      },
      "categories": {
        "getting_started": ["getting-started", "overview", "introduction"],
        "concepts": ["concepts", "architecture", "cluster"],
        "workloads": ["workloads", "pods", "deployments", "statefulsets", "daemonsets"],
        "services": ["services", "networking", "ingress", "dns"],
        "storage": ["storage", "volumes", "persistent"],
        "configuration": ["configmap", "secrets", "configuration"],
        "security": ["security", "rbac", "authentication", "authorization"],
        "api": ["api", "reference", "kubectl"]
      },
      "rate_limit": 0.5,
      "max_pages": 400
    },
    {
      "type": "github",
      "repo": "kubernetes/kubernetes",
      "enable_codebase_analysis": true,
      "code_analysis_depth": "deep",
      "fetch_issues": true,
      "max_issues": 100,
      "fetch_changelog": true,
      "fetch_releases": true,
      "file_patterns": [
        "pkg/apis/**/*.go",
        "pkg/controller/**/*.go",
        "pkg/kubelet/**/*.go",
        "staging/src/k8s.io/api/**/*.go",
        "staging/src/k8s.io/client-go/**/*.go"
      ]
    }
  ]
}
